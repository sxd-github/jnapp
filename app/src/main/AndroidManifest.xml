<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sxd.thanksgivinghall">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.sxd.thanksgivinghall.GuideActivity" />
        <activity android:name="com.example.sxd.thanksgivinghall.login.LoginActivity"/>
        <activity
            android:name="com.example.sxd.thanksgivinghall.MainFragment"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.sxd.thanksgivinghall.login.ChangePwActivity"/>
        <activity android:name="com.example.sxd.thanksgivinghall.MainActivity"/>
        <activity android:name="com.example.sxd.thanksgivinghall.notice.NoticeAddActivity" />
        <activity android:name="com.example.sxd.thanksgivinghall.notice.NoticeDetailActivity" />
        <activity android:name="com.example.sxd.thanksgivinghall.task.TaskAddActivity" />
        <activity android:name="com.example.sxd.thanksgivinghall.task.ToDoTaskDetailActivity" />
        <activity android:name="com.example.sxd.thanksgivinghall.task.FinishedTaskDetailActivity" />

        <activity android:name="com.example.sxd.thanksgivinghall.treelist.base.BasesActivity" />
        <activity android:name="com.example.sxd.thanksgivinghall.treelist.officer.BasesActivity" />
        <activity android:name="com.example.sxd.thanksgivinghall.treelist.officeUser.BasesActivity" />
        <activity android:name="com.example.sxd.thanksgivinghall.task.ReplyTaskActivity" />
    </application>

</manifest>